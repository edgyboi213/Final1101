<Window x:Class="Final11011.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final11011"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="300" Loaded="Window_Loaded">
    <StackPanel VerticalAlignment="Top" Height="286" Margin="0,148,0,0">
        <TextBlock Text="Логин:" Margin="5"/>
        <TextBox x:Name="LoginTextBox"/>
        <TextBlock Text="Пароль: " Margin="5"/>
        <TextBox x:Name="PasswordTextBox"/>
        <Button Content="Войти" Width="150" Margin="5" x:Name="LoginButton" Click="LoginButton_Click"/>
    </StackPanel>
</Window>
